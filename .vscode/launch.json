{
  "version": "0.2.0",
  "configurations": [
    {
        "name": "Python: FastAPI",
        "type": "debugpy",
        "request": "attach",
        "connect": {
            "host": "backend",
            "port": 5678
        },
        "pathMappings": [
            {
            "localRoot": "${workspaceFolder}/backend",  // ローカルのコードパス
            "remoteRoot": "/backend"                   // コンテナ内のコードパス
            }
        ]
    },
    {
        "name": "Chrome: Vue",
        "type": "chrome",
        "request": "launch",
        "url": "http://localhost:5173",
        "webRoot": "${workspaceFolder}/frontend/src"
    }
  ]
}