{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "backend",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}", // ローカルのコードパス
          "remoteRoot": "/workspace" // コンテナ内のコードパス
        }
      ]
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Vue.js: Chrome (Frontend)",
      "url": "https://${env:FRONTEND_DOMAIN}",
      "webRoot": "${workspaceFolder}/frontend/src"
    }
  ]
}